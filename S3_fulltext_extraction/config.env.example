# Set your OpenAI credentials and extraction parameters here
export OPENAI_API_KEY="sk-..."
export OPENAI_MODEL="gpt-4.1"
export OPENAI_TEMPERATURE=0.2
export OPENAI_MAX_TOKENS=8192

# Path to PDFs named <pmid>.pdf
export PDF_DIRECTORY=/path/to/pdfs

# Where to store JSON outputs + checkpoint
export EXTRACTION_OUTPUT_DIR=extraction_results
export CHECKPOINT_FILE=checkpoint.json

# Optional: TSV with markdown/plain-text for hallucination checks
# export MARKDOWN_TSV_PATH=/path/to/markdown_content.tsv

# Parallelism & retries
export MAX_WORKERS=2
export MAX_RETRIES=3
export SLEEP_BETWEEN_REQUESTS=0.1

# Proxy settings (disable if not needed)
export PROXY_ENABLED=false
# export HTTP_PROXY=http://proxy:7890
# export HTTPS_PROXY=http://proxy:7890
