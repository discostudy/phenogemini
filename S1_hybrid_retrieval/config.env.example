#!/usr/bin/env bash
# Minimal configuration template for the hybrid retrieval pipeline.
# Copy to config.env and update the paths/parameters as needed.

# Path to the SQLite PubMed repository (generated separately).
export REPO=/path/to/pubmed-store.db

# Query and qrels TSVs.
export QUERIES_SRC=data/dev/queries_all.tsv
export QRELS_SRC=data/dev/qrels_in_pool.tsv

# Retrieval depth and batching parameters.
export TOPK=5000
export SBERT_BATCH=64
export SBERT_DEVICES=cuda:0

# Parallel workers for lexical views.
export BM25_WORKERS=8
export BM25_QUERY_CHUNK=50

# Optional keyword view parameters.
export KEYWORDS_WORKERS=8
export KEYWORDS_QUERY_CHUNK=50

# Number of negatives when building pools (if used).
export NEG_RATIO=10
